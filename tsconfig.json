{
	"compilerOptions": {
		"target": "es2022",
		"module": "UMD",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"baseUrl": ".",
		"outDir": "lib",
		"isolatedModules": true,
		"declaration": true,
		"lib": ["esnext", "DOM"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
